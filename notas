# SE SENÃO
inteiro nota1, nota2, nota3
real media, recuperacao

escreva("Digite a primeira nota: ")
leia(nota1)
escreva("Digite a segunda nota: ")
leia(nota2)
escreva("Digite a terceira nota: ")
leia(nota3)

media = (nota1 + nota2 + nota3) / 3

escreva("Média: " + media)

se (media >= 70) {
	escreva("Situação: APROVADO")
} se (media < 50) {
	escreva("Situação: REPROVADO")
} senao {
	escreva("Situação: RECUPERAÇÃO\n")
	escreva("Digite a nota da recuperação: ")
	leia(recuperacao)
	se (recuperacao >= 70) {
		escreva("Situação: APROVADO")
	} senao {
		escreva("Situação: REPROVADO")
	}
}

# LÓGICO
inteiro estoque = 1, idade = 60
logico tem_danos = falso, eh_estudante = verdadeiro

se (estoque > 0 e nao tem_danos) {
  escreva("Concluir venda")
} 

se (eh_estudante ou idade > 60) {
  escreva("Desconto liberado!")
} 

# CASO FAÇA
inteiro posicao

escreva("posição")
leia(posicao)

escolha (posicao) {
	caso 1:
		escreva("primeiro")
		pare
	caso 2:
		escreva("segundo")
		pare
	caso contrario:
		escreva("terceiro")
}
